<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <by.onliner.news.customViews.ExtendedTextView
        android:id="@+id/tv_view_news_vote_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:fontAsset="OpenSans-Regular.ttf"/>

    <by.onliner.news.customViews.ExtendedTextView
        android:id="@+id/tv_view_news_vote_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorOnlinerGray"
        android:textSize="13sp"
        app:fontAsset="OpenSans-Regular.ttf"/>

    <LinearLayout
        android:id="@+id/l_view_news_vote_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
    </LinearLayout>

    <Button
        android:id="@+id/bt_view_news_vote"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/comment_button_selector"
        android:textAllCaps="false"
        android:text="@string/vote"/>

</LinearLayout>