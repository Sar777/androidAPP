<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="3dp"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/i_preview_image"
            android:contentDescription="Property Image"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:minHeight="190dp"
            android:maxHeight="190dp"
            android:scaleType="centerCrop"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/tv_preview_upd_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/tv_rounded_red"
                android:text="@string/updStatus"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/i_preview_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:background="@drawable/tv_rounded_grow"
                android:src="@drawable/i_onliner_video"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/l_preview_photos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/tv_rounded_grow"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:padding="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_preview_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="1dp"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:src="@drawable/i_onliner_photos"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tv_rounded_red">

                <TextView
                    android:id="@+id/tv_preview_views"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/i_onliner_views"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/tv_rounded_yellow"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_preview_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="1dp"
                    android:textColor="@android:color/black"
                    android:text="3000"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/i_onliner_comments"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/i_shape_light_black"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_preview_title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/tv_unknown"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>