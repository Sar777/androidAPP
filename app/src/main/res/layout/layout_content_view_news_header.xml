<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l_news_view_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/img_view_news_header_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:minHeight="150dp" />

    <TextView
        android:id="@+id/tv_view_news_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/l_view_news_attr_header"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/i_shape_light_black"
        android:textStyle="bold"
        android:text="@string/default_title"/>

    <LinearLayout
        android:id="@+id/l_view_news_attr_header"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:background="@drawable/i_shape_light_black"
        android:layout_alignBottom="@+id/img_view_news_header_image">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tv_rounded_red">

            <TextView
                android:id="@+id/tv_view_news_header_views"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:text=""/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="1dp"
                android:src="@drawable/i_onliner_views"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/tv_rounded_yellow"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_view_news_header_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:text=""/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginRight="1dp"
                android:src="@drawable/i_onliner_comments"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_view_news_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
</RelativeLayout>