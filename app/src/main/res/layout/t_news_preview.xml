<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.eschao.android.widget.elasticlistview.ElasticListView
        android:id="@+id/lvMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="#ffda50"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:dividerHeight="3dp">
    </com.eschao.android.widget.elasticlistview.ElasticListView>

    <ProgressBar
        android:id="@+id/progressBarLoading"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/l_group_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/repeat_load_info" />

        <Button
            android:id="@+id/btnLoadContent"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/comment_button_selector"
            android:padding="10dp"
            android:text="@string/repeat"/>
    </LinearLayout>
</RelativeLayout>